<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/luckiest_guy"
            android:text="@string/a3"
            android:textSize="72sp"
            tools:layout_editor_absoluteX="164dp"
            tools:layout_editor_absoluteY="236dp" />

        <TextView
            android:id="@+id/txtAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/aboutString"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="173dp"
            tools:layout_editor_absoluteY="433dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recursos Utilizados:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="18dp"
            tools:layout_editor_absoluteX="173dp"
            tools:layout_editor_absoluteY="433dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-Cloud Firestore"
            tools:layout_editor_absoluteX="173dp"
            tools:layout_editor_absoluteY="433dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-Realtime Database"
            tools:layout_editor_absoluteX="173dp"
            tools:layout_editor_absoluteY="433dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-Google Material Design"
            tools:layout_editor_absoluteX="173dp"
            tools:layout_editor_absoluteY="433dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Participantes:"
            android:layout_marginTop="18dp"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="173dp"
            tools:layout_editor_absoluteY="433dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-Neillon Cesar"
            tools:layout_editor_absoluteX="173dp"
            tools:layout_editor_absoluteY="433dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-Wandersson Barros"
            tools:layout_editor_absoluteX="173dp"
            tools:layout_editor_absoluteY="433dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-Rayller Emery"
            tools:layout_editor_absoluteX="173dp"
            tools:layout_editor_absoluteY="433dp" />

    </LinearLayout>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top" />
</androidx.constraintlayout.widget.ConstraintLayout>